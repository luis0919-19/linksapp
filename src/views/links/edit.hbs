
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{link.title}}" class="form-control" name="title" placeholder="Titulo" autofocus>
                        </div>
                        <div class="form-group mt-3">
                            <input type="url" value="{{link.url}}" name="url" class="form-control" placeholder="Url">
                        </div>
                        <div class="form-group mt-3">
                            <textarea name="description" rows="2" class="form-control" placeholder="Descripcion">{{link.description}}</textarea>
                        </div>
                        <div class="form-group mt-3 text-centerx">
                            <button class="btn btn-success">Editar</button>
                            <a href="/links" class="btn btn-secondary">Regresar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>